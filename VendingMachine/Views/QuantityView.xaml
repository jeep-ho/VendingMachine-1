<UserControl x:Class="VendingMachine.Views.QuantityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="85" d:DesignWidth="95">
    
    <Grid x:Name="LayoutRoot" Background="White" d:DataContext="{d:DesignData /SampleData/QuantityViewModelSampleData.xaml}">
    	<TextBox Margin="8,8,8,0" Text="{Binding Quantity, Mode=TwoWay}" VerticalAlignment="Top"/>
    	<Button Content="Add" HorizontalAlignment="Left" Margin="8,45,0,0" VerticalAlignment="Top" Width="79" Command="{Binding Add}"/>

    </Grid>
</UserControl>
